rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeamMember() {
      // Check if the user has a member profile with a list of teams
      return isSignedIn() && exists(/databases/$(database)/documents/members/$(request.auth.uid)) && 'teams' in get(/databases/$(database)/documents/members/$(request.auth.uid)).data;
    }

    function isMemberOfTeams(teamIds) {
      // Check if the user is a member of any of the given teamIds
      return isTeamMember() && get(/databases/$(database)/documents/members/$(request.auth.uid)).data.teams.hasAny(teamIds);
    }

    // --- User & Member Data ---
    match /users/{userId} {
      allow get, list: if isAdmin() || isOwner(userId);
      allow create; // Allow user creation during signup
      allow update: if isAdmin() || isOwner(userId);
      allow delete: if isAdmin();
    }

    match /members/{memberId} {
      allow get, list: if isAdmin() || isOwner(memberId);
      allow create; // Allow member profile creation during signup
      allow update: if isAdmin() || isOwner(memberId);
      allow delete: if isAdmin();
    }

    // --- Group Data (Teams & Classes) & Subcollections ---
    match /groups/{groupId} {
      // Any signed-in user can read group information.
      allow read: if isSignedIn();
      // Only admins can modify groups.
      allow write: if isAdmin();

      match /members/{memberId} {
          allow read: if isSignedIn();
          allow write: if isAdmin();
      }
    }

    // --- Core Data Collections ---
    match /appointmentTypes/{typeId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /locations/{locationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // --- News Articles ---
    match /news/{newsId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- Penalty Catalog ---
    match /penalties/{penaltyId} {
       allow read: if isSignedIn();
       allow write: if isAdmin();
    }

    // --- Appointment Exceptions ---
    match /appointmentExceptions/{exceptionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // --- Polls ---
    match /polls/{pollId} {
      // Allow any signed-in user to READ/LIST polls. Client-side queries handle filtering.
      allow read: if isSignedIn();
      // Allow users to VOTE (update) on any poll they can see.
      allow update: if isSignedIn();
      // Only admins can create or delete polls.
      allow create, delete: if isAdmin();
    }

    // --- Appointments & Responses ---
    match /appointments/{appointmentId} {
      // Allow read if the appointment is public OR the user is a member of one of its teams.
      allow read: if isSignedIn() && (resource.data.visibility.type == 'all' || isMemberOfTeams(resource.data.visibility.teamIds));
      allow list: if isSignedIn(); // Allow listing so client can query and filter
      // Only admins can create, update, or delete appointments.
      allow write: if isAdmin();
    }
    
    match /appointmentResponses/{responseId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }

    // --- Team Treasury ---
    match /treasury/{transactionId} {
      allow read: if isAdmin() || (isTeamMember() && get(/databases/$(database)/documents/members/$(request.auth.uid)).data.teams.hasAny([resource.data.teamId]));
      allow list: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
