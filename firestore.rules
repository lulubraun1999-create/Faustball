rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isUser() {
      return request.auth != null;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, delete: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    match /members/{memberId} {
      allow get: if isUser();
      allow list: if isAdmin();
      allow create: if isUser();
      allow update: if isOwner(memberId) || isAdmin();
      allow delete: if isOwner(memberId) || isAdmin();
    }

    match /groups/{groupId} {
      allow read: if isUser();
      allow write: if isAdmin();

      match /members/{memberId} {
        allow read: if isUser();
        allow write: if isAdmin();
      }
    }

    match /appointments/{appointmentId} {
        allow read: if isUser();
        allow write: if isAdmin();
    }
    
    match /appointmentExceptions/{exceptionId} {
        allow read: if isUser();
        allow write: if isAdmin();
    }
    
    match /appointmentResponses/{responseId} {
        allow read: if isUser();
        allow create, update: if isUser();
        allow delete: if isUser();
    }

    match /appointmentTypes/{typeId} {
        allow read: if isUser();
        allow write: if isAdmin();
    }
    
    match /locations/{locationId} {
        allow read: if isUser();
        allow write: if isAdmin();
    }

    match /polls/{pollId} {
      allow read: if isUser();
      allow write: if isAdmin();
      allow update(path, resource): if isUser() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes']);
    }

    match /news/{newsId} {
      allow read: if isUser();
      allow write: if isAdmin();
    }

    match /treasury/{transactionId} {
      allow read, write: if isAdmin();
    }

    match /penalties/{penaltyId} {
      allow read, write: if isAdmin();
    }
  }
}
