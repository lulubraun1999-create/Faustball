{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lib": "rm -rf lib && tsc",
    "serve": "npm run lib && firebase emulators:start --only functions",
    "shell": "npm run lib && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lib:watch": "tsc --watch",
    "build": "tsc"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.4.5"
  },
  "private": true
}